  
{
  "name": "Accessibility Line Spacing Tool",
  "version": "1.0",
  "manifest_version" : 2,
  "description": "Adds linespacing equal to 1.5x the font size to all text elements within a page. Used for testing against WCAG accessibility standard 1.4.12.",
  "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action": {
  	"default_popup": "popup.html",

 	"default_icon": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
      }
    },
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },


  "permissions": ["activeTab"]
}
